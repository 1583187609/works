/**index.wxss**/
@import "../../template/template.wxss";
#swiper{
  margin-bottom: 30rpx;
  background: #eee;
}
.contain{
  margin-bottom: 30rpx;
  /* background: #444444; */
}
.title{
  padding: 10rpx 20rpx;
  background: #222222;
}
.title text{
  color: #FF8F3A;
  line-height: 2;
  font-weight: 900;
  letter-spacing: 5rpx;
}
.title navigator{
  font-size: 30rpx;
}
.wrap{
  flex-wrap: wrap;
  padding: 10rpx 0;
}
.item-box{
  width: 360rpx;
  margin: 10rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #ffffff;
}
.img-box{
  position: relative;
  height: 360rpx;
}
.img-box image{
  width: 360rpx;
  height: 360rpx;
}
.author{
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  background-color: rgba(0, 0, 0, .6);
}
.name{
  height: 54rpx;
  line-height: 54rpx;
  font-size: 36rpx;
  padding: 10rpx 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}